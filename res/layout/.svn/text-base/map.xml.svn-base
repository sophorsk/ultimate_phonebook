<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:weightSum="1">
    <RelativeLayout android:layout_width="match_parent" android:id="@+id/relativeLayout1" android:layout_height="wrap_content" android:layout_weight="1.06">
        <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/location" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_marginBottom="10dp"></EditText>
        <Button android:id="@+id/directions" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/getdirections" android:layout_above="@+id/location" android:layout_centerHorizontal="true" android:layout_marginBottom="10dp"></Button>
        <Button android:id="@+id/gps" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/gpsdirections" android:layout_above="@+id/directions" android:layout_centerHorizontal="true" android:layout_marginBottom="10dp"></Button>
        <Button android:id="@+id/mapView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/viewonmap" android:layout_above="@+id/gps" android:layout_centerHorizontal="true" android:layout_marginBottom="10dp"></Button>
        <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/destination" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:layout_marginTop="26dp"></TextView>
    </RelativeLayout>
    
</LinearLayout>
