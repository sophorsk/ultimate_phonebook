<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:weightSum="1">
    <RelativeLayout android:layout_height="wrap_content" android:layout_weight="1.06" android:id="@+id/relativeLayout1" android:layout_width="match_parent">
        <TextView android:layout_alignParentRight="true" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/destination" android:textAppearance="?android:attr/textAppearanceMedium" ></TextView>
        <EditText android:id="@+id/location" android:layout_alignParentRight="true" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:layout_height="wrap_content" android:layout_width="wrap_content"></EditText>
        <Button android:id="@+id/mapView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/viewonmap" android:layout_below="@+id/destination" android:layout_alignLeft="@+id/gps"></Button>
        <Button android:id="@+id/directions" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/getdirections" android:layout_above="@+id/location" android:layout_alignLeft="@+id/gps"></Button>
        <Button android:id="@+id/gps" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/gpsdirections" android:layout_below="@+id/mapView" android:layout_centerHorizontal="true" android:layout_marginTop="24dp"></Button>
    </RelativeLayout>
    
</LinearLayout>
